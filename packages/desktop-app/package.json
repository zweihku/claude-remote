{
  "name": "@claude-remote/desktop-app",
  "version": "1.0.0",
  "description": "Claude Remote Desktop Application",
  "main": "dist/main.js",
  "author": "Claude Remote",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && electron .",
    "dev": "tsc && electron .",
    "package": "npm run build && electron-builder --config.npmRebuild=false",
    "package:mac": "npm run build && electron-builder --mac --config.npmRebuild=false",
    "package:win": "npm run build && electron-builder --win --config.npmRebuild=false",
    "package:linux": "npm run build && electron-builder --linux --config.npmRebuild=false"
  },
  "dependencies": {
    "@claude-remote/shared": "*",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/ws": "^8.5.10",
    "7zip-bin": "^5.2.0",
    "electron": "28.3.3",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.2"
  },
  "build": {
    "appId": "com.claude-remote.desktop",
    "productName": "Claude Remote",
    "asar": false,
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "assets/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dir"
      ],
      "hardenedRuntime": false,
      "gatekeeperAssess": false
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development"
    },
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      }
    ]
  }
}
