{
  "name": "claude-remote",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Remote control for Claude Code CLI",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:shared": "npm run build -w @claude-remote/shared",
    "build:relay": "npm run build -w @claude-remote/relay",
    "dev:relay": "npm run dev -w @claude-remote/relay",
    "test": "npm run test --workspaces --if-present",
    "test:relay": "npm run test -w @claude-remote/relay",
    "demo:server": "npm run dev -w @claude-remote/relay",
    "demo:desktop": "npm run demo:desktop -w @claude-remote/relay",
    "demo:phone": "npm run demo:phone -w @claude-remote/relay",
    "server": "npm run dev -w @claude-remote/relay",
    "desktop": "tsx packages/relay/src/desktop-claude.ts",
    "desktop:app": "npm run start -w @claude-remote/desktop-app",
    "desktop:build": "npm run build -w @claude-remote/desktop-app",
    "desktop:package": "npm run package -w @claude-remote/desktop-app",
    "clean": "rm -rf packages/*/dist packages/*/node_modules node_modules"
  },
  "keywords": ["claude", "remote", "cli"],
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.11.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
